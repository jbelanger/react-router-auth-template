# Environment (development/production)
NODE_ENV=development

# Logging Configuration
LOGGER_LOG_LEVEL=info                   # Available: audit, error, warn, info, debug, trace
LOGGER_SERVICE_NAME=frontend-service     # Name of your service for logging context

# Audit Log Configuration
LOGGER_AUDIT_LOG_ENABLED=true           # Enable/disable audit logging
LOGGER_AUDIT_LOG_DIRNAME=logs           # Directory where audit logs will be stored
LOGGER_AUDIT_LOG_FILENAME=audit         # Base filename for audit logs
LOGGER_AUDIT_LOG_RETENTION_DAYS=30      # Number of days to retain audit logs
