{
   "semi": true,
   "tabWidth": 3,
   "singleQuote": true,
   "printWidth": 120,
   "bracketSameLine": true,
   "importOrder": [
      "reflect-metadata",
      "^react$",
      "^@testing-library/(.*)$",
      "^@remix(.*)$",
      "^@react-router(.*)$",
      "<THIRD_PARTY_MODULES>",
      "^[(.|~)/]"
   ],
   "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "decorators-legacy"
   ],
   "importOrderSeparation": true,
   "importOrderSortSpecifiers": true,
   "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
   ]
}